<Window
    x:Class="ImageTag.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ImageTag"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:ImageTag.Views"
    Title="图片分类"
    Width="1000"
    Height="600"
    mc:Ignorable="d">
    <Grid>
        <Rectangle
            Fill="#FFF4F4F5"
            Stroke="#FF5ABED6"
            StrokeThickness="2" />
        <TabControl Margin="2">
            <TabItem Header="开始" Style="{StaticResource TabItem}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button
                        Width="120"
                        Height="50"
                        Margin="0,0,0,20"
                        Click="Button_Click"
                        Content="导入图片" />
                    <Button
                        Width="120"
                        Height="50"
                        Click="Button_Click_1"
                        Content="查看图片" />
                </StackPanel>
            </TabItem>
            <TabItem Header="图片分类" Style="{StaticResource TabItem}">
                <views:ImageControl />
            </TabItem>
            <TabItem Header="图片查看" Style="{StaticResource TabItem}">
                <views:SelectImageControl />
            </TabItem>
        </TabControl>

    </Grid>
</Window>
