<UserControl
    x:Class="ImageTag.Views.TagControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ImageTag.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <Rectangle
            Fill="#FFF4F4F5"
            RadiusX="4"
            RadiusY="4"
            Stroke="#FF5ABED6"
            StrokeThickness="2" />
        <DockPanel Margin="4">
            <TextBlock
                Name="TagName"
                MaxWidth="200"
                Margin="2,0,2,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                DockPanel.Dock="Left"
                Text="123"
                TextWrapping="Wrap" />
            <Button
                x:Name="Close"
                Width="20"
                HorizontalAlignment="Right"
                Click="Close_Click"
                Content="×"
                DockPanel.Dock="Right" />
            <Button
                x:Name="Edit"
                Width="20"
                Margin="0,0,2,0"
                HorizontalAlignment="Right"
                Click="Edit_Click"
                Content="E"
                DockPanel.Dock="Right" />
        </DockPanel>
    </Grid>
</UserControl>
